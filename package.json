{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Lib do curso de TDD na pr√°tica.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**.spec.js --watch --require babel-register",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": ["text", "html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dyegocruz/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Dyego Cruz <dyegocruz@gmail.com> (https://github.com/dyegocruz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dyegocruz/js-tdd-course/issues"
  },
  "homepage": "https://github.com/dyegocruz/js-tdd-course#readme",
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "husky": "^0.15.0-rc.13",
    "mocha": "^5.0.5",
    "nyc": "^11.7.1"
  }
}
